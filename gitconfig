[user]
    name = "Sergey Golitsynskiy"
    email = sgolitsynskiy@gmail.com

[color]
    ui = auto

[core]
    editor = vim
	autocrlf = input
	excludesfile = gitignore_global

[alias]
    st = status
    co = checkout
    cob = checkout -b
    br = branch
    ci = commit
    cia = !git add --all && git commit 
    unstage = reset HEAD --
    last = log -1 HEAD
    graph = log --oneline --decorate --graph --all 
    
[diff]

	submodule = log

[push]
	recurseSubmodules = check
